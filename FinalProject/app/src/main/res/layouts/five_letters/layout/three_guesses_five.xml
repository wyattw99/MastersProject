            android:layout_height="30dp"
            android:background="@color/black"
            android:textColor="@color/white"
            android:layout_margin="5dp"
            android:textSize="20sp"
            android:textAlignment="center"
            android:id="@+id/result_box_5"/>
    </LinearLayout>
    <LinearLayout
