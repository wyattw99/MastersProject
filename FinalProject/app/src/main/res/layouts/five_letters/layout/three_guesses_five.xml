        android:id="@+id/new_game_button"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next_word_button"
        android:layout_margin="20dp"
        android:id="@+id/next_word_button"/>
